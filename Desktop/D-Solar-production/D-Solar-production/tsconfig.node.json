{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es2020"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/scripts/**/*", "src/lib/**/*", "src/models/**/*", "src/data/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
} 